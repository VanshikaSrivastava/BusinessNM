<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secondContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="12"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="3">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:animateOnBoundary="true"
                app:autoPlay="true"
                app:indicatorGravity="top"
                app:indicatorVisibility="gone"
                app:pageColor="#00000000"
                app:pageTransformInterval="1000"
                app:pageTransformer="flow"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_weight="7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Recent"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/txtshowAll"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:text="Show All"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/firstlayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="4">

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdAddCustomer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgAddCustomer"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView
                                android:id="@+id/txtGetCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgAddCustomer"
                                android:gravity="center"
                                android:text=" "
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdCustomerList"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgCustomerList"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgCustomerList"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:text="Agriculture Industry"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdDelivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgCustomerDelivery"
                                android:layout_width="74dp"
                                android:layout_height="89dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgCustomerDelivery"
                                android:gravity="center"
                                android:text="Air Purification"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdProfile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgCustomerProfile"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="13dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgCustomerProfile"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="Animation Studio"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdReport"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgReport"
                                android:layout_width="68dp"
                                android:layout_height="71dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="Architectural And Civil Engineering"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdLogout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgLogout"
                                android:layout_width="80dp"
                                android:layout_height="71dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="14dp"
                                android:gravity="center"
                                android:text="Astrology And Vastu Consultation"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdLogout1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgLogout1"
                                android:layout_width="80dp"
                                android:layout_height="63dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgLogout1"
                                android:gravity="center"
                                android:text="Advocate, Legal Consultants"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/crdLogout2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgLogout2"
                                android:layout_width="100dp"
                                android:layout_height="68dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgLogout2"
                                android:gravity="center"
                                android:text="Architect,Interior,Urban Planner"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:animateOnBoundary="true"
                app:autoPlay="true"
                app:fillColor="#FFFFFFFF"
                app:indicatorGravity="top"
                app:indicatorVisibility="gone"
                app:pageColor="#00000000"
                app:pageTransformInterval="1500"
                app:pageTransformer="slide_over"
                app:radius="6dp"
                app:slideInterval="2000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>